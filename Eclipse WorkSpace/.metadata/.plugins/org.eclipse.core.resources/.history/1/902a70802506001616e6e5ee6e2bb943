import processing.core.*;



public class ConnectFour extends PApplet
{
	
	public void setup()
	{
		size(1920,1080);
		background(0);
	}
	
	public static void main(String args[]) 
	{
	    PApplet.main(new String[] { "--present", "ConnectFour" });
	}
	
	
	public void draw()
	{
		stroke(255);
	    if (mousePressed) 
	    {
	      line(mouseX,mouseY,pmouseX,pmouseY);
	    }
	}
	
	
}
