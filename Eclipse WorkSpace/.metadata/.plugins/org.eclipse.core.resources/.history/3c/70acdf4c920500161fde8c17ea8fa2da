import processing.core.*;
import ddf.minim.*;
import controlP5.*;



public class MyProcessingSketch extends PApplet 
{
	Minim m;
	AudioPlayer song;
	
	ControlP5 cp5;
	int c = color(100);
	
	int mode = 1;
	
	
	
	public void setup() 
	{
	    size(1200,1200);
	    
	    m = new Minim(this);
	    //loads song from the data folder
	    song = m.loadFile("Drop It Like It's Hot.mp3");
	    song.play();
	    
	    cp5 = new ControlP5(this);
	    cp5.addColorWheel("c" , 250 , 10 , 200 ).setRGB(color(128,0,255));
	    noStroke();
	}//end setup
  
	
	
  public static void main(String args[]) 
  {
	    PApplet.main(new String[] { "--present", "MyProcessingSketch" });
  }//end main

  
  
  public void draw() 
  {
	  switch(mode)
	  {
		  case 1:
		  {
			  background(0);
			  fill(c);
			  rect(0,240,width,200);
			 println(cp5.get(ColorWheel.class,"c").getRGB()); 
		  }
	  
		  case 2:
		  {
		  }
	  
		  case 3:
		  {
		  }
	  }//end switch
	  
    stroke(255);
    if (mousePressed) 
    {
    	
      line(mouseX,mouseY,pmouseX,pmouseY);
    }//end mousePressed
  }//end draw
}//end Sketch